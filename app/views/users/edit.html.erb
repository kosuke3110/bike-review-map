<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>
<h2 class="text-xl font-bold mb-4">プロフィール編集</h2>

<%= form_with model: @user, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :name, class: "block font-semibold" %>
    <%= f.text_field :name, class: "border rounded w-full p-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "block font-semibold" %>
    <%= f.email_field :email, class: "border rounded w-full p-2" %>
  </div>

  <%= f.submit "更新", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
<% end %>
