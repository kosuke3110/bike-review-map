<h2 class="text-2xl font-bold text-center mb-6">新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "max-w-md mx-auto bg-white p-6 rounded-lg shadow-md" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<!-- 名前 -->
<div class="mb-4">
  <%= f.label :name, "お名前", class: "block text-gray-700 font-semibold mb-1" %>
  <%= f.text_field :name, autocomplete: "name", class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
</div>

  <!-- メールアドレス -->
  <div class="mb-4">
    <%= f.label :email, "メールアドレス", class: "block text-gray-700 font-semibold mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <!-- パスワード -->
  <div class="mb-4">
    <%= f.label :password, "パスワード", class: "block text-gray-700 font-semibold mb-1" %>
    <% if @minimum_password_length %>
      <small class="text-gray-500">（<%= @minimum_password_length %>文字以上）</small>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300 mt-1" %>
  </div>

  <!-- パスワード確認 -->
  <div class="mb-6">
    <%= f.label :password_confirmation, "パスワード（確認）", class: "block text-gray-700 font-semibold mb-1" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <!-- 登録ボタン -->
  <div class="text-center">
    <%= f.submit "登録する", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-full transition duration-300" %>
  </div>
<% end %>

<div class="text-center mt-4 text-sm">
  <%= render "devise/shared/links" %>
  <div>
    <%= link_to 'topに戻る', root_path, class: "text-blue-600 hover:underline" %>
  </div>
</div>

