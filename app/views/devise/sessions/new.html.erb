<h2 class="text-2xl font-bold text-center mb-6">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "max-w-md mx-auto bg-white p-6 rounded-lg shadow-md" }) do |f| %>

  <!-- メールアドレス -->
  <div class="mb-4">
    <%= f.label :email, "メールアドレス", class: "block text-gray-700 font-semibold mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <!-- パスワード -->
  <div class="mb-4">
    <%= f.label :password, "パスワード", class: "block text-gray-700 font-semibold mb-1" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <!-- ログイン状態を保持 -->
  <% if devise_mapping.rememberable? %>
    <div class="mb-4 flex items-center">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, "ログイン状態を保持する", class: "text-sm text-gray-700" %>
    </div>
  <% end %>

  <!-- ログインボタン -->
  <div class="text-center">
    <%= f.submit "ログイン", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-full transition duration-300" %>
  </div>
<% end %>

<%= form_with url: user_google_oauth2_omniauth_authorize_path, method: :post, local: true do %>
  <%= submit_tag "Googleでログイン", class: "bg-red-500 text-white px-4 py-2 rounded" %>
<% end %>

<%= button_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, class: "bg-red-500 text-white px-4 py-2 rounded" %>

<div class="text-center mt-4 text-sm text-gray-600">
  <%= render "devise/shared/links" %>
  <div>
    <%= link_to 'topに戻る', root_path, class: "text-blue-600 hover:underline" %>
  </div>
</div>

