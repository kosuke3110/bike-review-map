<h2 class="text-xl font-bold mb-4">レビューを編集</h2>

<%= form_with(model: @review, local: true) do |f| %>
  <%= f.hidden_field :shop_place_id %>

  <div>
    <%= f.label :rating_overall, "総合評価 (1〜5)" %>
    <%= f.number_field :rating_overall, in: 1..5, required: true %>
  </div>

  <div>
    <%= f.label :rating_skill, "技術の評価" %>
    <%= f.number_field :rating_skill, in: 1..5, required: true %>
  </div>

  <div>
    <%= f.label :rating_service, "接客の評価" %>
    <%= f.number_field :rating_service, in: 1..5, required: true %>
  </div>

  <div>
    <%= f.label :rating_price, "価格の評価" %>
    <%= f.number_field :rating_price, in: 1..5, required: true %>
  </div>

  <div>
    <%= f.label :comment, "コメント" %>
    <%= f.text_area :comment %>
  </div>

  <div>
    <%= f.submit "更新する", class: "bg-green-500 text-white px-4 py-2 rounded" %>
  </div>
<% end %>

<%= link_to "戻る", shop_path(@review.shop_place_id), class: "text-blue-600 underline mt-4 inline-block" %>
